{
  "manifest_version": 2,
  "name": "Voice note",
  "description": "This extension allows you to record and share your voice notes",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "assets/recorder-16.png",
    "default_popup": "popup/index.html",
    "default_title": "Pop up"
  }
}